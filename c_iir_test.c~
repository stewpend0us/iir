#include "c_iir.h"
#include <stdio.h>

void run_test( FLOAT_TYPE * input, int in_count, FLOAT_TYPE * expected, int expected_count, const struct c_iir * iir, const char name[] )
{
	printf("TEST %s:\n", name );
	FLOAT_TYPE output, *in;
	in = input;
	printf( "%20s%20s%20s\n", "expected", "calculated", "status" );
	for ( int i = 0; i<expected_count; i++ )
	{
		if (in_count == expected_count)
			in = &input[i]
		output = iir_calculate( iir, *in );
		printf( "%20f%20f%20s\n", expected[i], output, expected[i] == output ? "good" : "bad" );
	}
	printf("\n");
}

